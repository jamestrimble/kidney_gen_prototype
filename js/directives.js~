'use strict';

/* Directives */

app.directive('probability', function() {
  return {
    require: 'ngModel',
    link: function(scope, elm, attrs, ctrl) {
      ctrl.$validators.probability = function(modelValue, viewValue) {

        if (!ctrl.$isEmpty(modelValue) && +viewValue >= 0 && +viewValue <= 1) {
          // it is valid
          return true;
        }

        // it is invalid
        return false;
      };
    }
  };
});
